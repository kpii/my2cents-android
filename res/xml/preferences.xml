<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- USER CREDENTIALS -->
	<PreferenceCategory android:title="User Account">
		<Preference android:title="Account" android:key="account_preference"
			android:summary="Active Twitter-compatible User Account"></Preference>




	</PreferenceCategory>

	<!-- SETTINGS -->



	<PreferenceCategory android:title="Additional Options">
		<EditTextPreference android:title="Prefix"
			android:summary="Product Code Prefix" android:key="preferences_prefix"
			android:defaultValue="#"></EditTextPreference>
		<EditTextPreference android:title="Number of search results"
			android:key="number_of_search_results" android:defaultValue="15"
			android:summary="How many tweets are returned by Twitter search"></EditTextPreference>
		<CheckBoxPreference android:key="gps_enabled"
			android:title="Location" android:summary="Use my location"
			android:defaultValue="false"></CheckBoxPreference>




	<CheckBoxPreference android:key="research_enabled" android:title="Research" android:summary="Send data to ETH Zurich for research" android:defaultValue="false"></CheckBoxPreference>
</PreferenceCategory>
	<PreferenceCategory android:title="@string/preferences_actions_title">
		<CheckBoxPreference android:key="preferences_play_beep"
			android:defaultValue="true" android:title="@string/preferences_play_beep_title" />
		<CheckBoxPreference android:key="preferences_vibrate"
			android:defaultValue="false" android:title="@string/preferences_vibrate_title" />
		<CheckBoxPreference android:key="preferences_copy_to_clipboard"
			android:defaultValue="true" android:title="@string/preferences_copy_to_clipboard_title" />
	</PreferenceCategory>
</PreferenceScreen>
