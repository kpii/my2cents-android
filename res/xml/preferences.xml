<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory
		android:title="Online Social Networks">
		<CheckBoxPreference
			android:defaultValue="false"
			android:key="@string/settings_login_twitter"
			android:title="@string/settings_login_twitter"
			android:summaryOff="@string/settings_login_twitter_desc_out"
			android:summaryOn="@string/settings_login_twitter_desc_in" />
		<CheckBoxPreference
			android:defaultValue="false"
			android:key="@string/settings_location"
			android:title="@string/settings_location"
			android:summaryOn="@string/settings_location_desc_on"
			android:summaryOff="@string/settings_location_desc_off"
			android:dependency="@string/settings_login_twitter" />
	</PreferenceCategory>
	<PreferenceCategory
		android:title="When a barcode is found\u2026">
		<CheckBoxPreference
			android:defaultValue="true"
			android:key="@string/settings_play_beep"
			android:title="@string/settings_play_beep" />
		<CheckBoxPreference
			android:defaultValue="false"
			android:key="@string/settings_vibrate"
			android:title="@string/settings_vibrate" />
		<CheckBoxPreference
			android:defaultValue="true"
			android:key="@string/settings_copy_to_clipboard"
			android:title="@string/settings_copy_to_clipboard" />
	</PreferenceCategory>
</PreferenceScreen>