<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:id="@+id/StatusPanel"
	android:background="@color/status_backgroung"
	android:padding="5dip"
	android:visibility="gone">
	<ProgressBar
		android:layout_height="24dip"
		android:layout_width="24dip"
		android:id="@+id/StatusProgressBar"
		android:layout_marginRight="5dip"></ProgressBar>
	<TextView
		android:layout_width="fill_parent"
		android:id="@+id/StatusTextView"
		android:textColor="@color/status_text"
		android:textSize="@dimen/status_text"
		android:layout_toRightOf="@id/StatusProgressBar"
		android:layout_centerVertical="true"
		android:text="@string/message_product_info_loading"
		android:layout_height="wrap_content"></TextView>
</RelativeLayout>