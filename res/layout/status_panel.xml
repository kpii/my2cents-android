<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:id="@+id/StatusPanel"
	android:background="@color/status_backgroung" android:padding="@dimen/status_padding" android:layout_width="fill_parent">
	<ProgressBar
		android:id="@+id/StatusProgressBar"
		android:layout_marginRight="5dip" android:visibility="gone" android:layout_height="@dimen/progress_bar_size" android:layout_width="@dimen/progress_bar_size"></ProgressBar>
	<TextView
		android:layout_width="fill_parent"
		android:id="@+id/StatusTextView"
		android:textColor="@color/status_text"
		android:textSize="@dimen/status_text"
		android:layout_toRightOf="@id/StatusProgressBar"
		android:layout_centerVertical="true"
		android:layout_height="wrap_content"></TextView>
</RelativeLayout>