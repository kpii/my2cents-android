<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:padding="10dp">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#FFF" android:text="Enter product code, name or keyword:"/>
	<EditText
		android:id="@+id/barcodeInputEditText"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:imeOptions="flagNoEnterAction" android:inputType="textShortMessage"/>
	<Button
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:id="@+id/doneButton" android:text="Search"></Button>
</LinearLayout>