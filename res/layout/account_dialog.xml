<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_height="fill_parent"
	android:padding="10dp" android:layout_width="wrap_content">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Your Twitter username" android:textAppearance="?android:attr/textAppearanceMedium"/>
	<EditText
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:imeOptions="flagNoEnterAction"
		android:id="@+id/usernameEditText"
		android:inputType="textPersonName" />
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Password" android:textAppearance="?android:attr/textAppearanceMedium"/>
	<EditText
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:id="@+id/passwordEditText"
		android:imeOptions="flagNoEnterAction"
		android:inputType="textPassword"></EditText>
	<CheckBox
		android:layout_height="wrap_content"
		android:id="@+id/showPasswordCheckBox"
		android:text=" Show Password"
		android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceSmall" android:textColor="#ccc"/>
	<LinearLayout
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:gravity="center"
		android:layout_marginTop="10px">
		<Button
			android:layout_height="wrap_content"
			android:text="Done"
			android:id="@+id/accountDoneButton"
			android:layout_width="wrap_content" android:width="110sp" android:minWidth="110sp"></Button>
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/accountCancelButton"
			android:text="Cancel" android:width="110sp" android:minWidth="110sp"></Button>
	</LinearLayout>
</LinearLayout>