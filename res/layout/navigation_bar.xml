<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:id="@+id/ToolbarLayout"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:background="@color/status_backgroung"
	android:paddingLeft="3dip"
	android:paddingRight="3dip"
	android:paddingTop="3dip">
	<ImageButton
		android:layout_height="wrap_content"
		android:layout_weight="0.25"
		android:scaleType="centerInside"
		android:layout_width="wrap_content"
		android:id="@+id/ImageButtonHome"
		android:src="@drawable/home_icon"></ImageButton>
	<ImageButton
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="0.25"
		android:scaleType="centerInside"
		android:id="@+id/ImageButtonScan"
		android:src="@drawable/scan_icon"></ImageButton>
	<ImageButton
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="0.25"
		android:scaleType="centerInside"
		android:id="@+id/ImageButtonStream"
		android:src="@drawable/stream_icon"></ImageButton>
	<ImageButton
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="0.25"
		android:scaleType="centerInside"
		android:id="@+id/ImageButtonHistory"
		android:src="@drawable/history_icon"></ImageButton>
</LinearLayout>