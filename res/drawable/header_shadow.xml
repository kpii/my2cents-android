<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="#00000000"
                android:endColor="#88000000"
                android:dither="true"
                android:angle="90" />
        </shape>
    </item>
    <item
        android:bottom="4dp">
        <shape>
            <solid
                android:color="#333" />
        </shape>
    </item>
</layer-list>
