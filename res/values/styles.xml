<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BarButton" parent="@android:style/Widget.Button">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">#eee</item>
        <item name="android:textSize">12dp</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:background">@android:drawable/list_selector_background</item>
    </style>
    
    <style name="VerticalBarButton" parent="@android:style/Widget.Button">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">#eee</item>
        <item name="android:textSize">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@android:drawable/list_selector_background</item>
    </style>
    
    <style name="BarButtonLarge" parent="@android:style/Widget.Button">
        <item name="android:layout_weight">2</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">#eee</item>
        <item name="android:textSize">12dp</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:background">@android:drawable/list_selector_background</item>
    </style>
        
    <style name="BarDivider">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/divider</item>
    </style>
    
    <style name="VerticalBarDivider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@drawable/divider</item>
    </style>    
</resources>