<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<include
		android:id="@+id/NavigationBar"
		layout="@layout/navigation_bar" />
	<View
		android:layout_width="3dp"
		android:layout_height="fill_parent"
		android:background="@drawable/navigation_bar_shadow" />
	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<include
			layout="@layout/product_info_panel" />
		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/StatusRelativeLayout"
			android:background="@color/status_backgroung"
			android:padding="5dip"
			android:visibility="gone">
			<ProgressBar
				android:layout_height="24dip"
				android:layout_width="24dip"
				android:id="@+id/StatusProgressBar"
				android:layout_marginRight="5dip"></ProgressBar>
			<TextView
				android:layout_width="fill_parent"
				android:id="@+id/StatusTextView"
				android:textColor="@color/status_text"
				android:textSize="@dimen/status_text"
				android:layout_toRightOf="@id/StatusProgressBar"
				android:layout_centerVertical="true"
				android:text="@string/message_product_info_loading"
				android:layout_height="wrap_content"></TextView>
		</RelativeLayout>
		<View
			android:layout_width="fill_parent"
			android:layout_height="3dp"
			android:background="@drawable/header_shadow" />
		<ListView
			android:layout_width="fill_parent"
			android:scrollbars="vertical"
			android:choiceMode="none"
			android:clickable="false"
			android:layout_height="fill_parent"
			android:id="@id/android:list"
			android:layout_weight="1">
		</ListView>
		<ScrollView
			android:id="@id/android:empty"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			android:layout_weight="1">
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:text="@string/message_no_comments"
				android:textSize="@dimen/empty_list_text"
				android:padding="@dimen/empty_list_padding"
				android:gravity="center"
				android:layout_gravity="center" />
		</ScrollView>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/LoginLayout"
			android:orientation="vertical"
			android:background="@color/comment_editor_background"
			android:padding="@dimen/comment_editor_padding"
			android:visibility="gone">
			<Button
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="@string/button_login_invitation"
				android:id="@+id/LoginButton" />
		</LinearLayout>
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/CommentEditorLayout"
			android:background="@color/comment_editor_background"
			android:paddingLeft="@dimen/comment_editor_padding"
			android:paddingRight="@dimen/comment_editor_padding"
			android:paddingTop="@dimen/comment_editor_padding">
			<Button
				android:text="@string/button_send"
				android:layout_width="wrap_content"
				android:id="@+id/SendButton"
				android:layout_alignParentRight="true"
				android:layout_height="wrap_content" />
			<EditText
				android:layout_height="wrap_content"
				android:id="@+id/CommentEditText"
				android:hint="@string/comment_hint"
				android:layout_width="fill_parent"
				android:layout_toLeftOf="@id/SendButton"
				android:imeOptions="actionSend|flagNoEnterAction"
				android:inputType="textCapSentences|textAutoCorrect|textMultiLine|textImeMultiLine" />
			<Gallery
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:longClickable="true"
				android:unselectedAlpha="0.3"
				android:id="@+id/TagsGallery"
				android:spacing="@dimen/tab_gallery_spacing"
				android:layout_below="@id/CommentEditText" />
		</RelativeLayout>
	</LinearLayout>
</LinearLayout>